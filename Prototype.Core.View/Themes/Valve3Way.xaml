<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Prototype.Core.Controls"
                    xmlns:models="clr-namespace:Prototype.Core.Models;assembly=Prototype.Core.Model"
                    xmlns:gasPanel="clr-namespace:Prototype.Core.Models.GasPanel;assembly=Prototype.Core.Model">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Common.xaml" />
        <ResourceDictionary Source="Button.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <models:ValveState x:Key="ValveStateOpened">Opened</models:ValveState>
    <models:ValveState x:Key="ValveStateClosed">Closed</models:ValveState>
    <models:ValveState x:Key="ValveStateUnknown">Unknown</models:ValveState>

    <Style TargetType="controls:Valve3Way">
        <Setter Property="Width" Value="40" />
        <Setter Property="Height" Value="43" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:Valve3Way">
                    <Canvas x:Name="MainControl">
                        <Path Fill="#FF8B8D8E" Data="M0 24 L19 24 L19 43 L17 43 L17 39.4488744 C10.3980016 37.798978 5.20102197 32.6019984 3.55112562 26 L0 26 L1.2246468e-16 24 Z M4.2862638e-16 19 L5.5109106e-16 17 L3.55112562 17 C5.20102197 10.3980016 10.3980016 5.20102197 17 3.55112562 L17 0 L19 0 L19 19 L0 19 Z M24 43 L24 0 L26 0 L26 3.55112562 C34.0425239 5.56102171 40 12.8347893 40 21.5 C40 30.1652107 34.0425239 37.4389783 26 39.4488744 L26 43 L24 43 Z"/>
                        <Path Stroke="#FFC3C5C2" Data="M4.76378295 24.5 C6.00706196 31.4838304 11.5161696 36.992938 18.5 38.236217 L18.5 24.5 L4.76378295 24.5 Z M4.76378295 18.5 L18.5 18.5 L18.5 4.76378295 C11.5161696 6.00706196 6.00706196 11.5161696 4.76378295 18.5 Z M24.5 4.76372301 L24.5 38.236277 C32.5308897 36.8082239 38.5 29.7893097 38.5 21.5 C38.5 13.2106903 32.5308897 6.19177614 24.5 4.76372301 Z"/>
                        <Path  Fill="#FFC3C5C1" Data="M19 19 L5 19 L5 17 L19 17 L19 19 Z M19 24 L19 26 L5 26 L5 24 L19 24 Z"/>
