<UserControl x:Class="Prototype.Core.Design.Pipes.TaskPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Prototype.Core.Design.Pipes"
             mc:Ignorable="d" d:DataContext="{d:DesignInstance local:TaskPanelVm}"
             Width="250" x:ClassModifier="internal">
    <Border BorderBrush="Black" BorderThickness="2" Background="White">
        <Grid>
            <TextBlock Grid.Row="0"
                       Text="{Binding FailType, StringFormat=Fail status: {0}}" />
        </Grid>
    </Border>
</UserControl>
