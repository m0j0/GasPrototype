        <Pipe Canvas.Left="36" Canvas.Top="157" Width="47" Type="Destination" />
        <Valve3Way Canvas.Left="20" Canvas.Top="138" ValveVm="{Binding ValveVm5}" UseAuxiliaryPathWhenOpened="True" IsPrimaryPathFlowInverted="True" />

